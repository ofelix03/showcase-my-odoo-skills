<odoo>

    <record model="ir.ui.view" id="decline_payment_plan_form">
        <field name="name">decline.payment.plan.form</field>
        <field name="model">account.decline.payment.plan</field>
        <field name="arch" type="xml">
            <form string="Payment Plan Decline Form">
                <sheet>
                    <group>
                        <field name="reason" />
                    </group>
                    <footer>
                        <button
                            string="DECLINE"
                            name="action_decline_plan"
                            type="object"
                            class="oe_highlight"
                        >
                        </button>
                        <button string="CANCEL" class="btn-default" special="cancel">
                        </button>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
